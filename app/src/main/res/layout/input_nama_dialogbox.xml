<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EBFCFB">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputNama"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_input_nama"
                android:textStyle="bold"
                android:textSize="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Username"
                android:textColor="#05ACA3"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/jumlahNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:layout_marginRight="30dp"
                    android:text="0/20"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/confirm"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_logout1"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Confirm"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_logout2"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Cancel"
                android:textColor="#05ACA3"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>