<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EBFCFB">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Apakah Anda Yakin Ingin Menghapus Soal ?"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnYa"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_logout1"
                android:gravity="center"
                android:text="YA"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnTidak"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_logout2"
                android:gravity="center"
                android:text="TIDAK"
                android:textColor="#05ACA3"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>