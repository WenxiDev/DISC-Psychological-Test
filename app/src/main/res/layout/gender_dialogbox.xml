<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EBFCFB">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rdLakilaki"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="@drawable/background_gender"
                android:button="@null"
                android:checked="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Laki-Laki"
                android:textColor="@drawable/gender_textcolor"/>

            <RadioButton
                android:id="@+id/rdPerempuan"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="@drawable/background_gender"
                android:button="@null"
                android:checked="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Perempuan"
                android:textColor="@drawable/gender_textcolor"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/cancel"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_logout1"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>