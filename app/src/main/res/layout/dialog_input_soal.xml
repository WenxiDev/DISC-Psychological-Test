<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#EBFCFB"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_soal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="18dp"
                android:hint="Soal Tes"
                android:background="@drawable/background_soal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/jumlahSoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:text="0/500"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/ed_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:hint="Pilihan A"
                    android:background="@drawable/custom_radiobtn"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/jumlah_A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:text="0/450"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:hint="Pilihan B"
                    android:background="@drawable/custom_radiobtn"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/jumlah_B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:text="0/450"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:hint="Pilihan C"
                    android:background="@drawable/custom_radiobtn"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/jumlah_C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:text="0/450"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radiobtn"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:hint="Pilihan D"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/jumlah_D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:text="0/450"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Kunci Jawaban"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_soal"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dominance"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_green2">

                        <Spinner
                            android:id="@+id/sp_dominance"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_soal"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Influence"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_green2">

                        <Spinner
                            android:id="@+id/sp_influence"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_soal"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steadiness"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_green2">

                        <Spinner
                            android:id="@+id/sp_steadiness"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_soal"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compliance"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_green2">

                        <Spinner
                            android:id="@+id/sp_compliance"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_button_logout1"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Simpan"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_button_logout2"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Cancel"
                    android:textColor="#05ACA3"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>